<div class="col-md-6 offset-md-3">
  <div class="card">
    <div class="card-header">
      <h1>Coches</h1>
    </div>
    <div class="card-body">
      {{#if car}}
        <ul class="list-group">
          {{#each car}}
            <li
              class="list-group-item d-flex justify-content-between align-items-center"
            >
              {{nameCar}}
              /
              {{year}}
              /
              {{price}}
              /
              {{photo}}
              <a
                href="/delete-car/{{@key}}"
                class="btn btn-danger"
              >Delete</a>
            </li>
          {{/each}}
        </ul>
      {{else}}
        <p>No Servicios Yet.</p>
      {{/if}}
    </div>
    <div class="card-footer">
      <form action="/new-car" method="POST">
        <div class="form-group">
          <input
            type="text"
            name="nameCar"
            placeholder="Nombre del Coche"
            class="form-control"
            autofocus
          />
        </div>
        <div class="form-group">
          <input
            type="text"
            name="year"
            placeholder="Año"
            class="form-control"
          />
        </div>
        <div class="form-group">
          <input
            type="number"
            name="price"
            placeholder="Precio"
            class="form-control"
          />
        </div>
        <div class="form-group">
          <input
            type="text"
            name="photo"
            placeholder="Foto"
            class="form-control"
          />
        </div>
        <button class="btn btn-primary btn-block">
          Add
        </button>
      </form>
    </div>
  </div>
</div>


